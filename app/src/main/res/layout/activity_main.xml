<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp" tools:context=".MainActivity"
    android:background="@drawable/ipw_background">

    <TextView
        android:id="@+id/greeting_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Bine ati venit in aplicatia IPW pentru baut bere!"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/greeting_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/greeting_1"
        android:layout_marginTop="5dp"
        android:text="Vrei sa scanezi sau sa generezi un cod QR?"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/linear_buttons"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/greeting_2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/generate_code"
            android:layout_width="0px"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:text="Generate"/>

        <Button
            android:id="@+id/scan_code"
            android:layout_width="0px"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:text="Scan"/>

    </LinearLayout>

    <TextView
        android:id="@+id/scan_qrtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_buttons"
        android:layout_marginTop="30dp"/>

</RelativeLayout>
